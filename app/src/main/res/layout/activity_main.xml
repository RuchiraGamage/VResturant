<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main"
    tools:context="com.example.ruchira.vresturant.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/logo"/>
        <TextView
            android:layout_width="200dp"
            android:id="@+id/txtslogen"
            android:text="@string/txtslogen"
            android:gravity="center"
            android:textColor="@android:color/white"

            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_alignParentBottom="true" >

        <info.hoang8f.widget.FButton
            android:id="@+id/btnsignup"
            android:text="Sign Up"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            app:fButtonColor="@color/btnsignup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:shadowColor="@android:color/white"
            app:shadowEnabled="true"
            app:shadowHeight="5dp"
            app:cornerRadius="4dp"
            android:layout_margin="8dp"/>


        <info.hoang8f.widget.FButton
            android:id="@+id/btnsignin"
            android:text="Sign In"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            app:fButtonColor="@color/btnsignActive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:shadowColor="@android:color/white"
            app:shadowEnabled="true"
            app:shadowHeight="5dp"
            app:cornerRadius="4dp"
            android:layout_margin="8dp"/>

    </LinearLayout>

</RelativeLayout>
